{
  "name": "devcontainer",
  "build": {
    "dockerfile": "Containerfile",
    "context": "."
  },
  "features": {},
  "remoteUser": "dev",
  "containerEnv": {
    "SHELL": "/bin/bash"
  },
  // "customizations": {
  //  "devpod": {
  //    "provider": "docker"
  //   }
  // },
  "portsAttributes": {
    "8000": {
      "label": "Deno Server",
      "onAutoForward": "notify"
    }
  },
  "runArgs": ["-p", "8000:8000", "--userns=keep-id"],
  "workspaceFolder": "/home/dev/workspace",
  "postCreateCommand": "deno install"
}
